{
  "name": "p2pong",
  "version": "0.0.0",
  "description": "Peer to Peer Pong over WebRTC",
  "main": "index.js",
  "scripts": {
    "build:js": "browserify client/index.js -o dist/bundle.js",
    "build:html": "jade templates -o dist",
    "build": "parellelshell 'npm run build:js' 'npm run build:html'",
    "watch": "parallelshell 'npm run watch:js' 'npm run watch:html'",
    "watch:js": "watchify client/index.js -v -o dist/bundle.js",
    "watch:html": "jade templates -w -o dist",
    "server:signalling": "node server",
    "server:assets": "http-server dist",
    "server": "parallelshell 'npm run server:signalling' 'npm run server:assets'",
    "start": "parallelshell 'npm run watch' 'npm run server'",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/articulate/p2pong.git"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/articulate/p2pong/issues"
  },
  "homepage": "https://github.com/articulate/p2pong#readme",
  "dependencies": {
    "socket.io": "^1.3.7",
    "socket.io-client": "^1.3.7",
    "socket.io-p2p": "^2.1.1"
  },
  "devDependencies": {
    "browserify": "^12.0.1",
    "http-server": "^0.8.5",
    "jade": "^1.11.0",
    "parallelshell": "^2.0.0",
    "socket.io-p2p-server": "^1.2.0",
    "watchify": "^3.6.0"
  }
}
